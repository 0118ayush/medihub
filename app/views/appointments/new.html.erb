
<h1>MEDIHELP</h1>

<h2>Book New Appointment</h2>
<hr>
    <%= form_for @appointment do |f| %>

    <%= f.label "Choose available day:" %>
    <%= f.collection_select(:id, @appointment_days, :id, :available_day_time) %>

    <% end %>


    <%= form_for @symptom do |f| %>
    <p>
    <%= f.label "Symptom category" %>
    <%= f.collection_select(:id, Symptom.all, :id, :name) %>
    </p>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </p>
    <p>
    <%= f.submit 'Book Appointment', class: 'btn btn-primary' %>
    <% end %>
